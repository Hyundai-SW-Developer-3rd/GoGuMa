<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ggm.goguma.mapper.CategoryMapper">

	<!-- 카테고리 목록 -->
	<select id="getCategoryParentList" resultType="com.ggm.goguma.dto.CategoryDTO">
		select categoryID, parentID, categoryname, categoryType, MD from category where parentid is null
	</select>
	
	<select id="getCategoryList" parameterType="int" resultType="com.ggm.goguma.dto.CategoryDTO">
		select * from category where parentid = ${categoryID}
	</select>
	
</mapper>